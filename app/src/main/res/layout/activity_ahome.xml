<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/green_bg"
    tools:context=".aHomeActivity"

    >

    <!-- Logo -->
<ImageView
android:id="@+id/logoImageView"
android:layout_width="120dp"
android:layout_height="120dp"
android:src="@drawable/logo"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
android:layout_marginTop="50dp" />

    <!-- App Name -->
    <TextView
        android:id="@+id/appNameTextView"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="WATERMELON RIPENESS \DETECTOR"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:textColor="#bd1c22"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoImageView" />

    <!-- Scan Button -->
    <Button
        android:id="@+id/scanButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:backgroundTint="#022e1f"
        android:text="Scan Now"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appNameTextView" />

    <!-- How It Works Button -->
    <Button
        android:id="@+id/ScanHistoryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show your Scan History"
        android:backgroundTint="#FFCDD2"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/scanButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- How It Works Button -->
    <Button
        android:id="@+id/libraryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Library"
        android:backgroundTint="#FFCDD2"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/ScanHistoryButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- How It Works Button -->
<Button
android:id="@+id/howItWorksButton"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="How It Works"
android:backgroundTint="#FFCDD2"
android:textColor="#000000"
    android:layout_marginTop="10dp"
app:layout_constraintTop_toBottomOf="@id/libraryButton"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scanning Tip Button -->
<Button
android:id="@+id/scanningTipButton"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Scanning Tip"
android:backgroundTint="#FFCDD2"
android:textColor="#000000"
    android:layout_marginTop="10dp"
app:layout_constraintTop_toBottomOf="@id/howItWorksButton"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
