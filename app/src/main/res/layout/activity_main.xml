<!-- res/layout/activity_main.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <androidx.camera.view.PreviewView
        android:id="@+id/cameraPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/topLeftImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:src="@drawable/logo"
        />

    <ImageView
        android:id="@+id/shutter"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_above="@+id/captureButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="70dp"
        android:layout_marginEnd="195dp"
        android:layout_marginBottom="399dp"
        android:src="@drawable/icon_shutter" />

    <ImageButton
        android:id="@+id/topRightImageButton1"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        android:background="@android:color/transparent"
        android:contentDescription="Image Button 1"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_hint" />

    <ImageButton
        android:id="@+id/topRightImageButton2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="69dp"
        android:background="@android:color/transparent"
        android:visibility="gone"
        android:contentDescription="Image Button 2"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_library" />

    <ImageButton
        android:id="@+id/captureButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent"
        android:text="Capture"
        android:src="@drawable/capture_button"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/switchCameraBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="30dp"
        android:layout_toEndOf="@+id/captureButton"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_switch_camera"
        android:text="Capture"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/selectFileBtn"
        android:layout_width="50dp"
        android:visibility="gone"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="30dp"
        android:layout_toStartOf="@+id/captureButton"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_gallery"
        android:text="Capture"
        android:textSize="18sp" />

</RelativeLayout>
